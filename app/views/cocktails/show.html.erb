<h2><%= @cocktail.name %></h2>


<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name  %>
    <%= link_to "delete", destroy_path(dose), method: :delete, data: { confirm: "Are you sure?"}  %>
</li>
<% end %>
</ul>

<%= link_to 'Back to cocktails', cocktails_path %>
<%= link_to "add dose", new_cocktail_dose_path(@cocktail) %>
