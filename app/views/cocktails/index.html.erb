<h1>Kilian's favourite Cocktails</h1>

<ul>
  <% @cocktails.each do |cocktail| %>
    <li> <%= cocktail.name %> </li>
    <%= link_to "show", cocktail_path(cocktail) %>
    <% if cocktail.photo? %>
    <%= cl_image_tag cocktail.photo.path, width: 200, height: 300, crop: :fill %>
    <% end %>
  <%end%>
</ul>

<h3><%= link_to "Add new cocktail", new_cocktail_path %></h3>

